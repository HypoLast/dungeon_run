{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "outDir": "dist/bin",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": ["es2015", "es2015.iterable", "dom"],
        "downlevelIteration": true,
        "experimentalDecorators": true
    },
    "files": [
        "../common/types.d.ts"
    ],
    "include": [
        "src/**/*.ts",
        "node_modules/@types/**/*.ts",
        "../common/**/*.ts"
    ]
}